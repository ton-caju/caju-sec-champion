# Server Configuration
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# Backend API (Lab-v4)
BACKEND_URL=http://localhost:8080
BACKEND_TIMEOUT=10000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Session Management
SESSION_SECRET=GENERATE_STRONG_RANDOM_SECRET_HERE_CHANGE_IN_PRODUCTION
SESSION_MAX_AGE=900000
COOKIE_DOMAIN=localhost

# reCAPTCHA Configuration
RECAPTCHA_V3_SECRET_KEY=YOUR_RECAPTCHA_V3_SECRET_KEY_HERE
RECAPTCHA_V2_SECRET_KEY=YOUR_RECAPTCHA_V2_SECRET_KEY_HERE
RECAPTCHA_V3_THRESHOLD=0.5

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting Configuration
RATE_LIMIT_IP_MAX=10
RATE_LIMIT_IP_WINDOW_MS=3600000
RATE_LIMIT_CPF_MAX=3
RATE_LIMIT_CPF_WINDOW_MS=900000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/bff.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# Security Configuration
HELMET_CSP_ENABLED=true
CSRF_COOKIE_NAME=_csrf

# Notification (Optional - Para notificações de recuperação)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMS_API_KEY=
SMS_API_URL=

# Secrets Files Location
SECRETS_PATH=../Lab-v4/uploads
